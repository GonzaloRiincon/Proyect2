<div class="container">

    <div class="row justify-content-center">

        <div class="col-7 card mt-3 bg-light bg-gradient bg-opacity-50">
            <div class="card-body">
                <img class="text-center img-fluid mx-auto d-block mt-3" src="{{user.avatar}}"
                    alt="{{user.username}}"></img>
                <h5 class="text-center mb-3 mt-5"><b>Username:</b> {{user.username}}</h5>
                <p class="text-center"><b>email: </b>{{user.email}}</p>

                <div class="row justify-content-center ">
                    {{#if user.draftInfo.draft}}
                    <h3 class="text-center my-3"><b>My team</b></h3>
                    <hr>
                    {{/if}}
                    {{#each user.draftInfo.draft}}
                    <div class="col-md-3 card  bg-light bg-opacity-50 mb-3 mx-3">
                        <p class="text-center pt-3"><b>{{this.name}} {{this.surname}}</b></p>
                        <p class="text-center ">{{this.points}} </p>
                        {{#if ../isOwn}}
                        <form class="d-grid" action="/draft/delete/{{this._id}}" method="POST">
                            <input type="submit" value="DELETE" class="btn btn-dark btn-sm border-dark mb-3">
                        </form>
                        {{/if}}
                    </div>
                    {{/each}}
                    <h3 class="text-center">{{user.draftInfo.totalPoints}}</h3>

                    <hr>
                </div>

                <p class="text-center"><b>Role:</b> {{user.role}}</p>

                {{#if isOwn}}
                <div class="col-12 d-grid text-center p-5">
                    <a class="btn btn-dark " href="/user/profile/edit/{{user.id}}">Edit</a>
                </div>
                {{/if}}

                {{#if prof}}
                <div class="col-12 d-grid text-center p-5">
                    <a class="btn btn-dark " href="/user/profile/edit/{{user._id}}">Edit</a>
                </div>
                {{/if}}

                {{#if isAdmin}}
                <div class="row justify-content-between mx-3 mb-4">
                    <div class="col-md-2 d-grid">
                        <a class="btn btn-light btn-outline-warning border-dark" href="/user/profile/edit/{{user.id}}"
                            role="button">EDIT</a>
                    </div>
                    <div class="col-md-2 d-grid">
                        <form class="d-grid" action="/user/delete/{{user.id}}" method="POST">
                            <input type="submit" value="DELETE"
                                class="btn btn-light btn-sm btn-outline-danger border-dark">
                        </form>
                    </div>
                    <div class="col-md-2 d-grid">
                        <form class="d-grid" action="/user/EDITOR/{{user.id}}" method="POST">
                            <input type="submit" value="EDITOR" class="btn btn-outline-success btn-sm">
                        </form>
                    </div>
                    <div class="col-md-2 d-grid">
                        <form class="d-grid" action="/user/ADMIN/{{user.id}}" method="POST">
                            <input type="submit" value="ADMIN" class="btn btn-outline-success btn-sm">
                        </form>
                    </div>
                    <div class="col-md-2 d-grid">
                        <form class="d-grid" action="/user/USER/{{user.id}}" method="POST">
                            <input type="submit" value="USER" class="btn btn-outline-success btn-sm">
                        </form>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="justify-content-end my-4">
        <a class="btn btn-dark" href="/user/list" role="button">Go back</a>
    </div>
</div>