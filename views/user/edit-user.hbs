<div class="row justify-content-center">

    <div class="col-md-6">

        <h1>Edit {{username}} Profile </h1>
        <hr>

        <form action="/user/profile/edit/{{id}}" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="{{username}}">
            </div>
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailInput" name="email" value="{{email}}">
            </div>
            <div class="mb-3">
                <label for="avatar" class="form-label">Avatar</label>
                <input type="file" class="form-control" id="avatar" name="avatar" value="{{avatar}}">
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark block">Save</button>
            </div>
        </form>
        {{#if errorMessage}}
        <div id="errorMessage">
            <pre>{{errorMessage}}</pre>
        </div>
        {{/if}}
    </div>
</div>