<h1>Ranking List</h1>
<a href="#{{currentUser._id}}">Go to your position!</a>
<div class="justify-content-center">
    <ol style="list-style-type: decimal;list-style-position: inside;">
        {{#each users}}
        {{#if draftInfo.totalPoints}}
        <div id="{{id}}" class="card my-4" style=" width: 40rem;">
            <div class="card-body bg-cards rounded" style=" background-color:rgba(255, 255, 255, 0.987); ">
                <li>
                    <div class="row justify-content-between my-3">
                        <div class="col-md-4">
                            <h4 class="card-title text-center">{{username}}</h4>
                        </div>
                        <div class="col-md-4">
                            <h4 class="card-title text-center">{{draftInfo.totalPoints}}</h4>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        {{#each draftInfo.draft}}

                        <div class="col-md-3 card  mb-3 mx-3">
                            <p class="text-center pt-3"><b>{{this.name}} {{this.surname}}</b></p>
                            <p class="text-center ">{{this.points}} </p>
                        </div>


                        {{/each}}
                    </div>
                    <div class="d-grid my-4">
                        <a href="/user/profile/{{id}}" class="btn btn-dark">Profile</a>
                    </div>
                </li>
            </div>
        </div>
        {{/if}}
        {{/each}}

    </ol>

</div>