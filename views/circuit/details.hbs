<div class="container">

    <div class="row justify-content-center">
        {{#if circuit}}
        <div class="col-4 card mt-5">
            <div class="card-body">
                <h3 class="text-center mb-3 mt-5"> {{circuit.circuitName}} </h3>
                <p class="text-center">Location: {{circuit.Location.locality}}, <b>{{circuit.Location.country}}</b></p>
            </div>
        </div>
        {{/if}}
        {{#unless circuit}}
        <h3 class="text-center mb-3 mt-5">Circuit not found</h3>
        {{/unless}}
    </div>
</div>