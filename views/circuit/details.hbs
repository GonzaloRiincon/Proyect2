<div class="container">

    <div class="row justify-content-center">
        {{#if circuit}}
        <div class="col-md-6 card mt-5">
            <div class="card-body">
                <h3 class="text-center mb-3 mt-5"> {{circuit.circuitName}} </h3>
                <p class="text-center mb-5">Location: {{circuit.Location.locality}}, <b>{{circuit.Location.country}}</b>
                    <input type="hidden" value="{{circuit.circuitId}}" id="id">
                </p>
                <div id="map"></div>
            </div>
        </div>
        {{/if}}
        {{#unless circuit}}
        <h3 class="text-center mb-3 mt-5">Circuit not found</h3>
        {{/unless}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/circuitDetailsMap.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBGw91p5NEdLD8YTpR6K0Zp0rnvo-GpBE&callback=initMap">
</script>