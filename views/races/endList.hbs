<h1>Finished Races</h1>


<div class="row">
    {{#each events}}
    <div class="col-md-5 mx-3 my-3">
        <div class="card my-5">
            <div class="card-body">
                <h5 class="card-title">{{circuit}} </h5>
                <h6 class="card-subtitle mb-2 text-muted">{{date}} </h6>
                <p class="card-text">
                <ul>
                    {{#each finalClasification}}
                    <li>
                        <p>{{this.name}} {{this.surname}} </p>
                    </li>
                    {{/each}}
                </ul>
                </p>
                <form class="d-grid" action="/event/finish/{{id}}" method="POST">
                    <input type="submit" value="FINISH" class="btn btn-dark btn-sm border-dark mb-3">
                </form>
                <form class="d-grid" action="/event/delete/{{id}}" method="POST">
                    <input type="submit" value="DELETE" class="btn btn-dark btn-sm border-dark mb-3">
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>